{% extends "::base.html.twig" %}

{% block body %}
	<section class="usuarios">
		<h2><i class="glyphicon glyphicon-file"></i> Usuarios</h2>
		{% if is_granted("ROLE_ADMIN") %}
			<div class="row">
			    <div class="col-xs-11 text-left">
			    	<a href="new" class="btn btn-success"> <span class="glyphicon glyphicon-plus"></span> Nueva asignatura</a>
			    </div>
			</div>
		{% endif %}
    	<hr/>
		{% for item in list %}
			
			<div class="row">
				{% if is_granted("ROLE_ADMIN") %}
					<div class="row">
					    <div class="col-xs-11 text-right">
							<div class="btn-group" role="group" aria-label="...">
					        	<a href="edit/{{item.getId()}}" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span></a>
					        	<a href="delete/{{item.getId()}}" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span></a>
								  
					        </div>
					    </div>
				    </div>
			    {% endif %}    
			    <div class="col-md-10 col-sm-10">
			      
			      <div class="row">
			        <div class="col-md-2">{{item.getNombre()}}</div>
			        <div class="col-md-2">{{item.getApellido()}}</div>
			        <div class="col-md-2">{{item.getEmail()}}</div>
			        <div class="col-md-2">{{item.getContrasena()}}</div>
			        <div class="col-md-2">{{item.getIdTipoUsuario()}}</div>
			      </div>
			    </div>
			</div>
			<hr/>
		{% endfor %}

	</section>	
{% endblock %}