{% extends "::base.html.twig" %}

{% block body %}
	<section class="notasemestrealumnos">
		<h2><i class="glyphicon glyphicon-file"></i> Notas</h2>

    	<hr/>
    	<div class="col-md-10 col-sm-10" >			      
	      <div class="row">
	        <div class="col-md-2"><strong>Asignatura</strong></div>
	      </div>
		 </div>
		{% for asignatura in asignaturas %}
			
			<div class="row">
				
				 
					<div class="row">
					    <div class="col-xs-11 text-right">
							<div class="btn-group" role="group" aria-label="...">
								{% if is_granted("ROLE_ADMIN") %}
								
						        	<a href="notasmateria/{{asignatura.getId()}}" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span></a>
						        {% else %}
						        	<a href="notasmateria/{{asignatura.getId()}}" class="btn btn-primary"><span class="glyphicon glyphicon-eye"></span></a>
					        	{% endif %} 
								  
					        </div>
					    </div>
				    </div>
			      
			    <div class="col-md-10 col-sm-10">
			      
			      <div class="row">
			        <span>{{asignatura.getAsignatura()}}</span>
			      </div>
			    </div>
			</div>
			<hr/>
		{% endfor %}

	</section>	
{% endblock %}