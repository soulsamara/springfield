{% block body %}
	<h1><i class="glyphicon glyphicon-pencil"></i> Editar </h1>

	{{ form_start(form) }}
	{{ form_errors(form.id_asignatura) }}
	  <div class="form-group">
	  	{{ form_label(form.id_asignatura) }}
	    {{ form_widget(form.id_asignatura, { 'attr': {'class': 'form-control'} }) }}

	  </div>
	   <div class="form-group">
	  	{{ form_label(form.id_profesor) }}
	    {{ form_widget(form.id_profesor, { 'attr': {'class': 'form-control'} }) }}

	  </div>
	  <div class="text-right">
		  {{ form_widget(form.save, { 'attr': {'class': 'btn btn-success'} }) }}
		  <a href="{{ url('homeprofesorasignatura') }}" class="btn btn-danger">Cancelar</a>
		{{ form_end(form) }}
	  </div>
{% endblock %}

