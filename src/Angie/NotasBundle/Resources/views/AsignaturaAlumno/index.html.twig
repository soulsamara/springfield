{% extends "::base.html.twig" %}

{% block body %}
	<section class="asignaturaalumnos">
		<h2><i class="glyphicon glyphicon-file"></i> Asignatura - Alumno</h2>
		{% if is_granted("ROLE_ADMIN") %}
		
			<div class="row">
			    <div class="col-xs-11 text-left">
			    	<a href="nuevaasignaturaalumno" class="btn btn-success"> <span class="glyphicon glyphicon-plus"></span> Nueva Asignatura - Alumno</a>
			    </div>
			</div>
		{% endif %}
    	<hr/>
		{% for item in list %}
			
			<div class="row">
				{% if is_granted("ROLE_ADMIN") %}
				
					<div class="row">
					    <div class="col-xs-11 text-right">
							<div class="btn-group" role="group" aria-label="...">
					        	<a href="editasignaturaalumno/{{item.getId()}}" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span></a>
					        	<a href="eliminarasignaturaalumno/{{item.getId()}}" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span></a>
								  
					        </div>
					    </div>
				    </div>
			    {% endif %}   
			    <div class="col-md-10 col-sm-10">
			      
			      <div class="row">
			        <div class="col-md-2">{{item.getAsignatura().getAsignatura()}}</div>
			        <div class="col-md-2">{{item.getAlumno().getUsername()}}</div>
			      </div>
			    </div>
			</div>
			<hr/>
		{% endfor %}

	</section>	
{% endblock %}